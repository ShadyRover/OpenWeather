<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.sshex.openweather.MainActivity"
    android:background="#03A9F5">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="45dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moscow"
            android:textColor="#ffffff"
            android:textSize="35sp"
            android:id="@+id/tv_city"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img_weather"
            android:src="@drawable/weathersunny"
            android:layout_alignBottom="@+id/linearLayout3"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="38dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2"
            android:layout_below="@+id/tv_min_temp"
            android:layout_alignStart="@+id/tv_max_temp"
            android:layout_marginTop="54dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="42.14"
                android:id="@+id/main_temp"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:textSize="60sp"
                android:layout_centerVertical="true"
                android:layout_alignStart="@+id/tv_apres" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="°"
                android:id="@+id/textView3"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:textSize="60sp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/tv_weather" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout2"
            android:layout_alignStart="@+id/linearLayout2"
            android:id="@+id/linearLayout3">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/max_min_layer"
                android:layout_below="@+id/linearLayout3"
                android:layout_alignParentStart="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="31"
                    android:id="@+id/tv_max_temp"
                    android:textColor="#82e1f4"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    android:layout_above="@+id/tv_city"
                    android:layout_alignStart="@+id/tv_apres" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="°/"
                    android:id="@+id/textView5"
                    android:textColor="#82e1f4"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    android:layout_alignTop="@+id/tv_min_temp"
                    android:layout_toEndOf="@+id/tv_min_temp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="22"
                    android:id="@+id/tv_min_temp"
                    android:textColor="#82e1f4"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    android:layout_above="@+id/textView3"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="°"
                    android:id="@+id/textView7"
                    android:textColor="#82e1f4"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    android:layout_alignTop="@+id/textView5"
                    android:layout_toStartOf="@+id/img_weather" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Sunny"
                android:id="@+id/tv_weather"
                android:textColor="#FFFFFF"
                android:fontFamily="sans-serif-light"
                android:textSize="25sp"
                android:layout_below="@+id/linearLayout2"
                android:layout_alignEnd="@+id/linearLayout2"
                android:layout_marginTop="5dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="AP"
                    android:id="@+id/textView9"
                    android:textColor="#82e1f4"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="1021.01"
                    android:id="@+id/tv_apres"
                    android:textColor="#82e1f4"
                    android:fontFamily="sans-serif-light"
                    android:textSize="20sp"
                    android:layout_below="@+id/textView7"
                    android:layout_toStartOf="@+id/textView7"
                    android:layout_marginLeft="5dp" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="19dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/drop"
                    android:adjustViewBounds="true"
                    android:layout_below="@+id/textView9"
                    android:layout_toStartOf="@+id/textView3"
                    android:scaleType="centerCrop" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="62"
                    android:id="@+id/water_textView"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="%"
                    android:id="@+id/textView"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/wind"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="1.4"
                    android:id="@+id/tv_wind"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:textSize="15sp"
                    android:layout_alignTop="@+id/tv_max_temp"
                    android:layout_alignStart="@+id/textView5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="m/s"
                    android:id="@+id/textView13"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif-light"
                    android:textSize="10sp"
                    android:layout_marginLeft="3dp"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv_city"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"></LinearLayout>
    </RelativeLayout>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/settings_btn"
        android:src="@drawable/settings"
        android:layout_alignBottom="@+id/relativeLayout"
        android:layout_toEndOf="@+id/relativeLayout" />

</RelativeLayout>
